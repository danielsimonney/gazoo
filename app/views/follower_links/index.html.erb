<p id="notice"><%= notice %></p>

<h1>Follower Links</h1>

<table>
  <thead>
    <tr>
      <th>Follower</th>
      <th>Followee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @follower_links.each do |follower_link| %>
      <tr>
        <td><%= follower_link.follower_id %></td>
        <td><%= follower_link.followee_id %></td>
        <td><%= link_to 'Show', follower_link %></td>
        <td><%= link_to 'Edit', edit_follower_link_path(follower_link) %></td>
        <td><%= link_to 'Destroy', follower_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Follower Link', new_follower_link_path %>
